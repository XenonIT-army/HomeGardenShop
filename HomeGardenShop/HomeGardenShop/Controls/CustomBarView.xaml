        <tabs:TabHostView x:Name="SToolbar"

                      HorizontalOptions="Center"
                      VerticalOptions="Start"
                      HeightRequest="60"
                      WidthRequest="280"
                      TabType="Fixed"
                      IsSegmented="True"
                       Orientation="Horizontal"
                      CornerRadius="30"
                      Margin="15"
                      BackgroundColor="{AppThemeBinding Dark={StaticResource TabHostDarkColor},Light={StaticResource DarkFrameColor}}"   
                      Shades="{shades:SingleShade Offset='0,8',
                                            BlurRadius=10,
                                           Color={StaticResource DarkSurface}}"
                      SegmentedOutlineColor="{StaticResource BlackC50}"
                       SelectedTabIndexChanged="SToolbar_SelectedTabIndexChanged"
